# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# AI API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# AI API Base URLs (可选，用于适配不同厂商的 API 服务)
# OpenAI 格式 API（如 Azure OpenAI、第三方代理等）
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_BASE_URL=https://your-custom-endpoint.com/v1

# Anthropic 格式 API
# ANTHROPIC_BASE_URL=https://api.anthropic.com
# ANTHROPIC_BASE_URL=https://your-custom-endpoint.com

# Database
DATABASE_URL=sqlite:///data/papernews.db

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
TIMEZONE=Asia/Shanghai

# Crawler Settings
ARXIV_CATEGORIES=cs.AI,cs.CL,cs.CV,cs.LG
ARXIV_MAX_RESULTS=50
OPENREVIEW_CONFERENCES=ICLR,NeurIPS,ICML

# Briefing Settings
DAILY_BRIEFING_HOUR=9
DAILY_BRIEFING_MINUTE=0
MAX_PAPERS_PER_DAY=10

# User Interests (comma-separated keywords)
USER_INTERESTS=machine learning,natural language processing,computer vision
